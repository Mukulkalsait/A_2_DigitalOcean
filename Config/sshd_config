# Serverside ssh config
# /etc/ssh/ssh_config

Port 22
Protocol 2

PermitRootLogin no
PasswordAuthentication no
ChallengeResponseAuthentication no
X11Forwarding no 

usePAM yes
PubKeyAuthentication yes
AllowTCPForwarding yes

MaxAuthTries 3
LoginGraceTime 30
ClientAliveInterval 300
ClientAliveCountMax 3

